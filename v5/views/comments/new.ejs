<%- include ("../partials/header") %>

<div class="container">
    <div class="jumbotron" style="width: 50%; margin: 25px auto;">

        <h1>Add a new comment to <%= match.name %> </h1>

        <form action="/campgrounds/<%= match._id %>/comments" method="POST">
            
            <div class="form-group">
            <input class="form-control" type="text" name="post[text]" placeholder="Add text">
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">submit</button>
           </div>

        </form>

    </div>
</div>

<a href="/campgrounds">Go Back</a>

